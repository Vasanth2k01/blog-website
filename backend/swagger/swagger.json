{
  "openapi": "3.0.0",
  "info": {
    "title": "Routes for Node-with-Angular project",
    "version": "1.0.0"
  },
  "paths": {
    "/api": {
      "get": {
        "summary": "Get health status of the application",
        "responses": {
          "200": {
            "description": "Successful response"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/users": {
      "post": {
        "summary": "Create Users to the users database",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userName": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "organisation": {
                    "type": "string"
                  }
                },
                "required": ["userName", "email", "password", "organisation"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful response"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
